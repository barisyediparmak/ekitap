        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="carousel-item active text-center">
            <a href="/Web/Product/Index/08c6fbb8-cc35-e811-9955-1c4d70f6b372"><img class="d-block img-fluid" src="~/Content/Images/Web/Home/kitap1.jpg" title="Kitaplar"></a>
        </div>
        <div class="carousel-item">
            <a href="/Web/Product/Index/92c51701-cd35-e811-9955-1c4d70f6b372"><img class="d-block img-fluid" src="~/Content/Images/Web/Home/filmler.jpg" title="Filmler"></a>
        </div>
        <div class="carousel-item">
            <a href="/Web/Product/Index/1e7f5008-cd35-e811-9955-1c4d70f6b372"><img class="d-block img-fluid" src="~/Content/Images/Web/Home/album.jpg" title="Müzikler"></a>
        </div>
        <div class="carousel-item">
            <a href="/Web/Product/Index/981ac613-cd35-e811-9955-1c4d70f6b372"><img class="d-block img-fluid" src="~/Content/Images/Web/Home/oyunlar.jpg" title="HobiOyuncak"></a>
