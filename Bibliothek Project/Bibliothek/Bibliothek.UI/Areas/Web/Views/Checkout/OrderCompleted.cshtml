@using Bibliothek.Model.Entity
@model Bibliothek.Model.Entity.Order
@{
    ViewBag.Title = "OrderCompleted";
    Layout = "~/Areas/Web/Views/Shared/_SharedWebLayout.cshtml";
}

@{
    Order order = null;
    if (Session["order"] != null)
    {
        order = Session["order"] as Order;
    }

    Customer customer = null;
    if (Session["login"] != null)
    {
        customer = Session["login"] as Customer;
    }
}

<link href="~/Content/Css/login-register.css" rel="stylesheet" />

<div class="container" style="margin-top:50px;">
    <div class="row">
        <div class="col-lg-12 offset-2">
            <div class="form-header">
                <h2 class="text-center"><i class="fa fa-check" aria-hidden="true"></i> Sipariş Tamamlandı</h2>
            </div>
            <div class="main-content">
                <div class="text-success">
                    <h2>Sayın: @customer.Name @customer.LastName</h2>
                    <br />
                    <h3>Sipariş Numaranız: @order.ID </h3>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    $(document).ready(function () {
        $("footer").toggle();
        $("#CategoryList").toggle();

        setTimeout(function () {
            window.location = "/Web/Home/Index";
        }, 5000)
    });
</script>

